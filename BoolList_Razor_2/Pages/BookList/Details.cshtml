@page
@model DetailsModel
@{
}

<br />
<h2>Details Book</h2>

<div style="border:1px solid #bbb9b9; border-radius:5px;">
    <form method="post">
        <div class="row" style="padding-left:30px; padding-top: 30px;">
          
            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="book.ISBN"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="book.ISBN" class="form-control" readonly />
                    </div>
                </div>
            </div>


            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="book.Title"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="book.Title" class="form-control" readonly/>
                    </div>
                </div>
            </div>


            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="book.Author"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="book.Author" class="form-control" readonly/>
                    </div>
                </div>
            </div>


            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="book.Price"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="book.Price" class="form-control" readonly/>
                    </div>
                </div>
            </div>


            <div class="form-group ">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="book.Avaibility"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="book.Avaibility" class="form-control" readonly/>
                    </div>
                </div>
            </div>

            <br />
            <div class="form-group">
                <a asp-page="Edit" asp-route-id="@Model.book.Id" class=" btn btn-primary btn-sm">Edit</a>
                <a asp-page="Index" class="btn btn-success btn-sm">Back to List</a>
            </div>
        </div>
    </form>
</div>